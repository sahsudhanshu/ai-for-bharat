# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# ─── API Gateway URL ──────────────────────────────────────────────────────────
# Your deployed API Gateway base URL (no trailing slash)
# Leave empty to run in DEMO MODE (all pages use mock data)
NEXT_PUBLIC_API_URL=

# ─── Amazon Cognito ───────────────────────────────────────────────────────────
NEXT_PUBLIC_COGNITO_USER_POOL_ID=ap-south-1_XXXXXXXXX
NEXT_PUBLIC_COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_COGNITO_REGION=ap-south-1

# ─── App Config ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_ENV=development

# ─── OpenWeatherMap (Ocean Data overlays) ────────────────────────────────────
# Used for temperature/wind/cloud weather tiles on the Ocean Data map.
NEXT_PUBLIC_OPENWEATHERMAP_API_KEY=
